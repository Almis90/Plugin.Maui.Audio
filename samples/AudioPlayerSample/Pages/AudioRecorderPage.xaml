<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AudioPlayerSample.ViewModels"
             x:Class="AudioPlayerSample.Pages.AudioRecorderPage"
             Title="Audio Recorder"
             x:DataType="viewmodels:AudioRecorderPageViewModel">
    <VerticalStackLayout>
        <Button
            Text="{Binding RecordButtonText}"
            Command="{Binding StartCommand}"
            BackgroundColor="{Binding RecordButtonColor}"/>
        <Button
            Text="Play"
            Command="{Binding PlayCommand}"
            BackgroundColor="{Binding RecordButtonColor}"/>
        <Label Text="{Binding AudioTime, StringFormat='{0:0.00} sec'}"
               HorizontalOptions="Center">
        </Label>
    </VerticalStackLayout>
</ContentPage>
